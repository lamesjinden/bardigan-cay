{:paths ["resources" "src/common"]
 :deps  {org.clojure/core.async        {:mvn/version "0.4.490"}
         markdown-clj/markdown-clj     {:mvn/version "1.10.1"}
         instaparse/instaparse         {:mvn/version "1.4.12"}
         io.replikativ/hasch           {:mvn/version "0.3.7"}
         com.alchemyislands/patterning {:mvn/version "0.5.4-SNAPSHOT"}
         org.babashka/sci              {:mvn/version "0.3.2"}}

 :aliases
 {
  :eastwood
  {:extra-deps {jonase/eastwood {:mvn/version "RELEASE"}}
   :main-opts  ["-m" "eastwood.lint" {:source-paths ["src"]}]}

  :clj-kondo
  {:extra-deps {clj-kondo/clj-kondo {:mvn/version "RELEASE"}}
   :main-opts  ["-m" "clj-kondo.main"]}

  :dev
  {:extra-paths ["dev"]
   :extra-deps  {expound/expound {:mvn/version "0.7.2"}}}

  :client
  {:extra-deps  {org.clojure/clojurescript                     {:mvn/version "1.11.57"}
                 reagent/reagent                               {:mvn/version "1.2.0"}
                 cljsjs/highlight                              {:mvn/version "11.7.0-0"}
                 cljsjs/react                                  {:mvn/version "17.0.2-0"}
                 cljsjs/react-dom                              {:mvn/version "17.0.2-0"}
                 cljs-react-material-ui/cljs-react-material-ui {:mvn/version "0.2.50"}
                 cljsjs/ace                                    {:mvn/version "1.4.2-0"}}
   :extra-paths ["src/client"]}

  :run-dev-client
  {:extra-deps {com.bhauman/rebel-readline {:mvn/version "0.1.4"}
                com.bhauman/figwheel-main  {:mvn/version "0.2.18"}}
   :main-opts  ["-m" "figwheel.main" "--build" "dev/dev-client" "--repl"]}

  :server
  {:extra-deps  {org.clojure/clojure      {:mvn/version "1.11.1"}
                 org.clojure/core.logic   {:mvn/version "0.8.11"}
                 org.clojure/data.json    {:mvn/version "1.0.0"}
                 org.clojure/tools.reader {:mvn/version "1.3.6"}
                 ring/ring-core           {:mvn/version "1.9.5"}
                 com.walmartlabs/lacinia  {:mvn/version "0.36.0"}
                 hiccup/hiccup            {:mvn/version "1.0.5"}
                 http-kit/http-kit        {:mvn/version "2.6.0"}
                 org.clojure/tools.cli    {:mvn/version "0.3.5"}
                 cljstache/cljstache      {:mvn/version "2.0.6"}
                 org.clojure/core.memoize {:mvn/version "1.0.253"}
                 clj-rss/clj-rss          {:mvn/version "0.2.6"}
                 remus/remus              {:mvn/version "0.1.0"}
                 org.slf4j/slf4j-nop      {:mvn/version "1.7.32"}}
   :extra-paths ["src/server"]}

  :dev-server
  {:extra-deps {ring/ring-devel     {:mvn/version "1.9.5"}
                ring-cors/ring-cors {:mvn/version "0.1.13"}}}

  :run-dev-server
  {:main-opts ["-m" "dev_server"]}

  :test
  {:extra-paths ["test"]
   :extra-deps  {com.cognitect/test-runner
                 {:git/url "https://github.com/cognitect-labs/test-runner.git"
                  :sha     "209b64504cb3bd3b99ecfec7937b358a879f55c1"}}
   :main-opts   ["-m" "cognitect.test-runner"]}

  :uberjar
  {:deps        {io.github.clojure/tools.build {:mvn/version "0.9.3"}}
   :extra-paths ["build"]
   :ns-default  build}}}
